---
import Layout from "@/layouts/Layout.astro";
import { API_BASE_URL } from "@/config/api";

const { id } = Astro.params;

interface Post {
  id: number;
  title: string;
  description: string;
  text: string;
}

const resp = await fetch(`${API_BASE_URL}/post/${id}`);
const post: Post = await resp.json();
---

<Layout title="new by id">
  <main class="new__main">
    <div class="container">
      <h1 class="new__title">{post.title}</h1>
      <p class="new__description">{post.description}</p>
      <p class="new__text">{post.text}</p>
    </div>
  </main>
</Layout>

<style lang="scss" scoped>
  .new__main {
    height: 100vh;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .container {
    width: max-content;
    padding: 10px 30px;

    display: flex;
    flex-direction: column;
    gap: 30px;

    border: 1px solid black;
    border-radius: 5px;
    text-align: center;
  }
</style>
