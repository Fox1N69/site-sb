              <div class="fullex__btn">
                <button class="fullex__btn-text">Подробнее о музее</button>
                <div class="fullex__arrow"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="gallery">
  <div class="fullgl__btn">Смотреть всю галерею</div>
  <span class="fullgl__arrow">
    <img src="../src/assets/image/arrow-more.png" />
