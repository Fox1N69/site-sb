---
import Layout from "@/layouts/Layout.astro";

const { id } = Astro.params;

interface Post {
  id: number;
  title: string;
  description: string;
  text: string;
}

const resp = await fetch(`http://localhost:4000/post/${id}`);
const post: Post = await resp.json();
---

<Layout title="news by id">
  <main class="news__main">
    <div>{post.title}</div>
    <p>{post.description}</p>
    <p>{post.text}</p>
  </main>
</Layout>
