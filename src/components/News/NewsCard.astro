---
interface Props {
  id?: number;
  title: string;
  description: string;
  text?: string;
}

const { id, title, description, text } = Astro.props;
---

<div class="new__card">
  <div class="news__card-img">
    <img src="/newcardnohover1.png" alt="" />
    <button class="new__btn">Читать</button>
  </div>
  <div class="new-card__content">
    <div class="new-card__title">{title}</div>
    <div class="new-card__description">{description}</div>
  </div>
</div>
